<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/settings_title"
        android:layout="@layout/custom_preference_title">

        <Preference
            app:key="@string/key_app_version"
            app:title="@string/app_version_title"
            android:layout="@layout/custom_preference_screen">
        </Preference>

        <Preference
            app:key="@string/key_terms_of_service"
            app:title="@string/terms_of_service_title"
            app:summary="@string/terms_of_service_summary"
            android:layout="@layout/custom_preference_screen">
        </Preference>

        <Preference
            app:key="@string/key_privacy_policy"
            app:title="@string/privacy_policy_title"
            app:summary="@string/privacy_policy_summary"
            android:layout="@layout/custom_preference_screen">
        </Preference>

        <Preference
            app:key="@string/key_license"
            app:title="@string/license_title"
            app:summary="@string/license_summary"
            android:layout="@layout/custom_preference_screen">
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>